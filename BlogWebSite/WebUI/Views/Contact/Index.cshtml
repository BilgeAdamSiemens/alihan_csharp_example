@section header{
      <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Contact Me</h1>
            <span class="subheading">Have questions? I have answers.</span>
          </div>
        </div>
      </div>
    </div>
  </header>
}

@model MessageViewModel

<!-- Main Content -->

    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        @if(ViewBag.Message != null){
          <div class="alert alert-success">@ViewBag.Message</div>
        }
        <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
        <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
        <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
        <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
        <form name="sentMessage" id="contactForm" method="POST" novalidate>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              
              <label asp-for="Name"></label>
              <input asp-for="Name" class="form-control" placeholder="İsim"  required data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger">
                
              <span class="text-danger" asp-validation-for="Name"></span>
              </p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label asp-for="EmailAddress"></label>
              <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Email Adres" required data-validation-required-message="Please enter your email address.">
              <p class="help-block text-danger">
                
              <span class="text-danger" asp-validation-for="EmailAddress"></span>
              </p>
            </div>
          </div>
          <div class="control-group">
            
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <label asp-for="PhoneNumber"></label>
              <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Telefon Numarası" required data-validation-required-message="Please enter your phone number.">
              <p class="help-block text-danger">
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
              </p>
              
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label asp-for="Text"></label>
              <textarea asp-for="Text" rows="5" class="form-control" placeholder="Mesaj"  required data-validation-required-message="Please enter a message."></textarea>
              <p class="help-block text-danger" >
                <span  asp-validation-for="Text"></span>
              </p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary">Send</button>
        </form>
      </div>
    </div>
