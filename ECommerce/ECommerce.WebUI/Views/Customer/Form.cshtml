@model Customer 

<form asp-controller="Customer" asp-action="Save" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
     <div class="row">

        <div class="col-md-12">
            <div class="card-box">
                <h5 class="text-uppercase bg-light p-2 mt-0 mb-3">General</h5>

                <div class="form-group mb-3">
                    <label asp-for="FirstName">First Name<span class="text-danger">*</span></label>
                    <input asp-for="FirstName" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName"> Last Name <span class="text-danger">*</span></label>
                    <input asp-for="LastName" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber"> Phone Number <span class="text-danger">*</span></label>
                    <input asp-for="PhoneNumber" class="form-control">
                </div>

                <div class="row">
                    <div class="col-md-3 mb-3">
                        @if (Model.ImageUrl != null)
                        {
                            <img src="/img/customer/@Model.ImageUrl" class="img-thumbnail" alt="">
                        }
                    </div>
                    <div class="col-md-9 mb-3">
                        <div class="custom-file">
                            <input type="file" name="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-12">
            <div class="text-center mb-3">
                <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
            </div>
        </div>
</div>
</form>