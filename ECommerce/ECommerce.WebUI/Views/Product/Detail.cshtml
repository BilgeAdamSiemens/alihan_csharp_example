@{ 
    Product product = Model;
}

@model Product



<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">UBold</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">eCommerce</a></li>
                            <li class="breadcrumb-item active">Product Detail</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Product Detail</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <div class="row">
                        <div class="col-lg-5">

                            <div class="tab-content pt-0">
                                <div class="tab-pane active show" id="product-1-item">
                                    <img src="/img/@product.ImageUrl" alt="" class="img-fluid mx-auto d-block rounded">
                                </div>
                                
                            </div>

                            
                        </div> <!-- end col -->
                        <div class="col-lg-7">
                            <div class="pl-xl-3 mt-3 mt-xl-0">
                           
                                <h4 class="mb-3">@product.Name</h4>
                                
                                
                                
                                <h4 class="mb-4">Price : <b>@product.UnitPrice ₺</b></h4>
                                <h4><span class="badge bg-soft-success text-success mb-4">Instock</span></h4>
                                <p class="text-muted mb-4">@product.Description</p>
                                
                                <form class="form mb-4" asp-controller="Cart" asp-action="Save" method="post">

                                    <input type="hidden" name="productId" value="@product.Id" />

                                    <label class="my-1 mr-2" for="quantityinput">Quantity</label>
                                    <input name="Quantity" value="1" class="mb-2" type="number" min="1" max="@product.StockAmount"/>
                                    

                                    <div>
                                        <button type="submit" class="btn btn-success waves-effect waves-light">
                                            <span class="btn-label"><i class="mdi mdi-cart"></i></span>Add to cart
                                        </button>
                                    </div>
                                </form>


                            </div>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->


                    

                </div> <!-- end card-->
            </div> <!-- end col-->
        </div>
        <!-- end row-->

    </div> <!-- container -->

</div>